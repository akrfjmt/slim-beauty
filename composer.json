{
    "name": "akrfjmt/slim-beauty",
    "description": "Dependency Injector for Slim3",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Akira Fujimoto"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "slim/slim": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Akrfjmt\\SlimBeauty\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
